generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// MULTI-TENANT CORE
// ============================================

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Public Profile (for landing page)
  description     String?   // About the shop
  contactEmail    String?   // Public contact email
  contactPhone    String?   // Public phone number
  address         String?   // Physical address
  website         String?   // External website URL
  logoUrl         String?   // Logo image URL
  logoKey         String?   // Blob storage key for logo
  publicPageEnabled Boolean @default(false)  // Whether /{slug} is accessible

  // Subscription & Billing
  planTier        PlanTier    @default(CORE)
  storageSize     StorageSize @default(SMALL)
  billingCycle    BillingCycle @default(MONTHLY)
  trialEndsAt     DateTime?   // Null = not on trial
  subscriptionEndsAt DateTime? // When current period ends
  stripeCustomerId   String?   @unique
  stripeSubscriptionId String? @unique

  // AI Credits
  aiCredits           Int      @default(0)  // Current balance
  aiCreditsResetAt    DateTime? // When monthly credits reset
  aiCreditsIncluded   Int      @default(0)  // Monthly included amount
  unlimitedAiCredits  Boolean  @default(false) // Bypass credit limits (admin/internal use)

  // Limits (computed from plan, stored for quick access)
  maxItems    Int @default(500)
  maxUsers    Int @default(1)

  // Rental Agreement
  rentalAgreementText String?  // Custom agreement text (markdown supported)

  // Relations
  users         User[]
  invitations   Invitation[]
  categories    Category[]
  costumes      CostumeItem[]
  customers     Customer[]
  productions   Production[]
  rentals       Rental[]
  aiUsageLogs   AIUsageLog[]
  creditPurchases CreditPurchase[]
}

enum PlanTier {
  CORE  // Basic inventory management
  PRO   // + AI features
  TEAM  // + Unlimited users, API, etc.
}

enum StorageSize {
  SMALL   // 500 items
  MEDIUM  // 2,000 items
  LARGE   // 5,000 items
}

enum BillingCycle {
  MONTHLY
  ANNUAL
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  passwordHash   String
  name           String
  role           UserRole @default(MEMBER)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  organizationId String

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  rentalsCreated Rental[]   @relation("RentalCreatedBy")

  @@index([organizationId])
}

enum UserRole {
  OWNER
  ADMIN
  MEMBER
}

model Invitation {
  id             String           @id @default(cuid())
  email          String
  token          String           @unique @default(cuid())
  role           UserRole         @default(MEMBER)
  status         InvitationStatus @default(PENDING)
  expiresAt      DateTime
  createdAt      DateTime         @default(now())
  organizationId String

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([token])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
}

// ============================================
// INVENTORY
// ============================================

model Category {
  id             String   @id @default(cuid())
  name           String
  description    String?
  color          String?  // For UI display
  createdAt      DateTime @default(now())
  organizationId String

  // Relations
  organization Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  costumes     CostumeItem[]

  @@unique([organizationId, name])
  @@index([organizationId])
}

model CostumeItem {
  id             String        @id @default(cuid())
  name           String
  description    String?
  sku            String?       // Optional internal tracking code
  size           String?
  color          String?
  era            String?       // e.g., "Victorian", "1920s", "Medieval"
  condition      ItemCondition @default(GOOD)
  status         ItemStatus    @default(AVAILABLE)
  location       String?       // e.g., "Rack A, Section 3"
  notes          String?
  purchasePrice  Float?
  rentalPrice    Float?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  organizationId String
  categoryId     String?

  // Relations
  organization Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  category     Category?       @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  rentalItems  RentalItem[]
  photos       CostumePhoto[]

  @@index([organizationId])
  @@index([categoryId])
  @@index([status])
}

model CostumePhoto {
  id            String    @id @default(cuid())
  url           String
  key           String    // Blob storage key for deletion
  type          PhotoType @default(MAIN)
  description   String?
  sortOrder     Int       @default(0)
  createdAt     DateTime  @default(now())
  costumeItemId String

  // Relations
  costumeItem CostumeItem @relation(fields: [costumeItemId], references: [id], onDelete: Cascade)

  @@index([costumeItemId])
  @@index([type])
}

enum PhotoType {
  MAIN        // Primary identification photo - clear full view
  ALTERNATE   // Different angles/views
  FEATURE     // Closeup on specific features
  MATERIAL    // Closeup showing materials/fabric
  INFO        // Tags, labels, marks, care instructions
}

enum ItemCondition {
  EXCELLENT
  GOOD
  FAIR
  POOR
  NEEDS_REPAIR
}

enum ItemStatus {
  AVAILABLE
  RENTED
  RESERVED
  MAINTENANCE
  RETIRED
}

// ============================================
// CUSTOMERS & PRODUCTIONS
// ============================================

model Customer {
  id             String   @id @default(cuid())
  name           String
  email          String?
  phone          String?
  company        String?  // Theater name, production company, etc.
  address        String?
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  organizationId String

  // Portal access
  portalToken    String?   @unique @default(cuid())
  portalEnabled  Boolean   @default(false)

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  rentals      Rental[]

  @@index([organizationId])
  @@index([portalToken])
}

model Production {
  id             String    @id @default(cuid())
  name           String    // e.g., "Romeo & Juliet"
  venue          String?
  director       String?
  startDate      DateTime?
  endDate        DateTime?
  notes          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  organizationId String

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  rentals      Rental[]

  @@index([organizationId])
}

// ============================================
// RENTALS
// ============================================

model Rental {
  id             String       @id @default(cuid())
  status         RentalStatus @default(ACTIVE)
  checkoutDate   DateTime     @default(now())
  dueDate        DateTime
  returnDate     DateTime?
  depositAmount  Float?
  totalAmount    Float?
  notes          String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organizationId String
  customerId     String
  productionId   String?
  createdById    String

  // Agreement tracking
  agreementAcceptedAt DateTime?   // When the agreement was accepted
  agreementSignature  String?     // Digital signature (typed name)
  agreementText       String?     // Snapshot of agreement at time of signing

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  customer     Customer     @relation(fields: [customerId], references: [id], onDelete: Restrict)
  production   Production?  @relation(fields: [productionId], references: [id], onDelete: SetNull)
  createdBy    User         @relation("RentalCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)
  items        RentalItem[]

  @@index([organizationId])
  @@index([customerId])
  @@index([productionId])
  @@index([status])
  @@index([dueDate])
}

enum RentalStatus {
  ACTIVE
  RETURNED
  OVERDUE
  CANCELLED
}

model RentalItem {
  id                  String         @id @default(cuid())
  conditionOut        ItemCondition  // Condition when checked out
  conditionIn         ItemCondition? // Condition when returned
  notesOut            String?
  notesIn             String?
  rentalId            String
  costumeItemId       String

  // Relations
  rental      Rental      @relation(fields: [rentalId], references: [id], onDelete: Cascade)
  costumeItem CostumeItem @relation(fields: [costumeItemId], references: [id], onDelete: Restrict)

  @@index([rentalId])
  @@index([costumeItemId])
}

// ============================================
// AI & BILLING
// ============================================

model AIUsageLog {
  id             String      @id @default(cuid())
  type           AIUsageType
  creditsUsed    Int
  metadata       Json?       // Store query details, results count, etc.
  createdAt      DateTime    @default(now())
  organizationId String
  userId         String?     // Who triggered it

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([createdAt])
  @@index([type])
}

enum AIUsageType {
  PHOTO_SEARCH      // Find costume by image
  TEXT_SEARCH       // Natural language search
  GENERATE_DESC     // Auto-generate description
  AUTO_TAG          // Auto-tag costume
  BULK_DESCRIBE     // Batch description generation
}

model CreditPurchase {
  id             String   @id @default(cuid())
  credits        Int      // Number of credits purchased
  amountPaid     Int      // In cents
  stripePaymentId String? @unique
  createdAt      DateTime @default(now())
  organizationId String

  // Relations
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([createdAt])
}
